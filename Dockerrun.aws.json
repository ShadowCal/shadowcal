{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "command": [
                "bash",
                "-c",
                "rm -f tmp/pids/server.pid && bundle exec rails server -p 80 -e $RACK_ENV -b 0.0.0.0"
            ],
            "environment": [
                {
                    "name": "RAILS_PATH",
                    "value": "/rails"
                },
                {
                    "name": "LANG",
                    "value": "en_US.UTF-8"
                },
                {
                    "name": "RACK_ENV",
                    "value": "production"
                },
                {
                    "name": "RAILS_ENV",
                    "value": "production"
                },
                {
                    "name": "RDS_HOSTNAME",
                    "value": "shadowcal-production-postgres.c7lltzqgyqwm.us-east-1.rds.amazonaws.com"
                },
                {
                    "name": "RDS_PORT",
                    "value": "5432"
                },
                {
                    "name": "RDS_USERNAME",
                    "value": "shadowcal"
                },
                {
                    "name": "RDS_PASSWORD",
                    "value": "yourpasswordhere"
                },
                {
                    "name": "RDS_DB_NAME",
                    "value": "shadowcal-production-postgres"
                }
            ],
            "essential": true,
            "links": [
                "postgres"
            ],
            "mountPoints": [
                {
                    "containerPath": "/rails",
                    "sourceVolume": "rails"
                },
                {
                  "sourceVolume": "awseb-logs-rails",
                  "containerPath": "/var/app/current/rails/logs"
                }
            ],
            "name": "rails",
            "image": "850702378733.dkr.ecr.us-east-1.amazonaws.com/850702378733.dkr.ecr.us-east-1.amazonaws.com/shadowcal:latest",
            "memory": 128,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ]
        },
        {
            "environment": [
                {
                    "name": "POSTGRES_PASSWORD",
                    "value": "yourpasswordhere"
                },
                {
                    "name": "POSTGRES_USER",
                    "value": "shadowcal"
                }
            ],
            "essential": true,
            "image": "postgres:9.5",
            "memory": 128,
            "mountPoints": [
                {
                    "containerPath": "/var/lib/postgresql/data",
                    "sourceVolume": "postgres"
                },
                {
                    "containerPath": "/rails",
                    "sourceVolume": "rails"
                }
            ],
            "name": "postgres",
            "portMappings": [
                {
                    "containerPort": 5432,
                    "hostPort": 5432
                }
            ]
        }
    ],
    "family": "",
    "volumes": [
        {
            "host": {
                "sourcePath": "/var/app/current/rails"
            },
            "name": "rails"
        },
        {
            "host": {
                "sourcePath": "/var/app/current/postgres"
            },
            "name": "postgres"
        }
    ]
}
